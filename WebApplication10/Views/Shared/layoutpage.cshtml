<body>
    <!-- Header -->
    <header>
        <h1 style="text-align:center; color:white">SaleManagement</h1>
    </header>
    <!-- End of Header -->
    <!-- Left Sidebar -->
    <nav>
        <h1>Navigation</h1>
        @Html.ActionLink("About", "About", null, new { id = "OT", style = "color: white" });<br /><br /><br /><br />
        @Html.ActionLink("Contact", "Contact");<br /><br /><br /><br />
        @Html.ActionLink("Enquiry", "Enquiry");<br /><br /><br /><br />
        @Html.ActionLink("Login", "Login");<br /><br /><br /><br />
        @Html.ActionLink("Purchase", "Purchase");<br /><br /><br /><br />
    </nav>
    <!-- End of Left Sidebar -->
    <!-- Content Body -->
    <div class="content">
        @RenderBody()
    </div>
    <!-- End of Content Body -->
    <!-- Footer -->
    <footer>
        <h4>I am Footer.</h4>
    </footer>

    <!-- Style -->
    <style type="text/css">
        .actionlink {
            font-size: larger;
            color: white;
        }
        </style>

        <style >
        header {
            height: 100px;
            width: 100%;
           background-color: lightseagreen; 
            
        }

        nav {
            float: left;
            width: 500px;
            height: 1000px;
                       background-color: cadetblue;
        
        }

        .content {
            float: initial;
            /*background-color: aliceblue;*/
            padding: 100px;
        }

        footer {
                        background-color: green;
         width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>
</body>
</html>
